<Window x:Class="_25_Triggers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_25_Triggers"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="MyButtonStyle" TargetType="Button">
            <Style.Triggers>
                <!-- DataTrigger binds to IsRunning -->
                <DataTrigger Binding="{Binding IsRunning, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                    <Setter Property="Content" Value="Stop"/>
                    <Setter Property="Background" Value="AliceBlue"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsRunning, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Content" Value="Resume"/>
                    <Setter Property="Background" Value="WhiteSmoke"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Button Width="100" Height="50" Content="Stop" Click="Button_Click" Style="{StaticResource MyButtonStyle}">
        </Button>
    </Grid>
</Window>
