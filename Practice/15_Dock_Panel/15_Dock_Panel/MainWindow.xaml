<Window x:Class="_15_Dock_Panel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockingManager>
        <LayoutRoot>
            <LayoutPanel Orientation="Horizontal">
                <LayoutDocumentPane>
                    <LayoutDocument Title="Document 1">
                        <TextBox Text="This is Document 1"/>
                    </LayoutDocument>
                    <LayoutDocument Title="Document 2">
                        <TextBox Text="This is Document 2"/>
                    </LayoutDocument>
                </LayoutDocumentPane>
                <LayoutAnchorablePane DockWidth="200">
                    <LayoutAnchorable Title="Tool Window">
                        <TextBlock Text="I'm a tool Window"/>
                    </LayoutAnchorable>
                </LayoutAnchorablePane>
            </LayoutPanel>
        </LayoutRoot>
    </DockingManager>
</Window>
