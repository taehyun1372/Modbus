<Window x:Class="_15_Dock_Panel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ad="http://avalondock.orccontrols.com"
        xmlns:views="clr-namespace:_15_Dock_Panel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockingManager Background="WhiteSmoke" Name="mainDockingManager" GotMouseCapture="mainDockingManager_GotMouseCapture" ActiveContentChanged="DockingManager_ActiveContentChanged">
        <LayoutRoot>
            <LayoutPanel Orientation="Horizontal">
                <LayoutAnchorablePane x:Name="mainDocumentPane">
                </LayoutAnchorablePane>
            </LayoutPanel>
        </LayoutRoot>
    </DockingManager>
</Window>
