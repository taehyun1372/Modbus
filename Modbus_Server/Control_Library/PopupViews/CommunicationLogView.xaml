<Window x:Class="Control_Library.PopupViews.CommunicationLogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Control_Library.PopupViews"
        mc:Ignorable="d"
        Title="CommunicationLogView" Height="370" Width="640">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <Button Name="btnResume" Content="Resume" Height="25" Width="50" Margin="10 0 5 3" Click="btnResume_Click"/>
            <Button Name="btnStop" Content="Stop" Height="25" Width="50" Margin="5 0 5 3" Click="btnStop_Click"/>
            <Button Name="btnClear" Content="Clear" Height="25" Width="50" Margin="5 0 10 3" Click="btnClear_Click"/>
        </StackPanel>
        <GroupBox Header="Communication Log" Grid.Row="1">
            <ListBox Margin="5" Name="lbCommunicationLog" ItemsSource="{Binding PacketLogs}">
            </ListBox>
        </GroupBox>
    </Grid>
</Window>
