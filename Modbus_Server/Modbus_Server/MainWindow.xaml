<Window x:Class="Modbus_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Modbus_Server"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="22"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="22"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_Save"/>
                <MenuItem Header="_Open"/>
            </MenuItem>
            <MenuItem Header="_Connection">
            </MenuItem>
            <MenuItem Header="_Setup">
                <MenuItem Name="miCreateTable" Header="Create _Table" Click="miCreateTable_Click"/>
                <MenuItem Name="miDeleteTable" Header="_Delete Table" Click="miDeleteTable_Click"/>
            </MenuItem>
        </Menu>
        <ContentControl Grid.Row="1" Name="ccMainArea"/>
        <TextBlock Grid.Row="2" Name="tbStatusBar" Text="Dummy Status"/>
    </Grid>
</Window>
